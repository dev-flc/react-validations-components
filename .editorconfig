# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true


[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{js,jsx}]
indent_style = space
indent_size = 4
charset = utf-8

[*.ejs]
indent_style = space
indent_size = 4
charset = utf-8

[*.{scss,sass}]
indent_style = space
indent_size = 4
charset = utf-8

[*.json]
indent_style = space
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false
